<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nový zápas"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/etHomeTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Domácí tým" />

        <EditText
            android:id="@+id/etAwayTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hostující tým"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typ zápasu:" />

        <RadioGroup
            android:id="@+id/rgMatchType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <RadioButton
                android:id="@+id/rbFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Přátelák"
                android:checked="true" />
            <RadioButton
                android:id="@+id/rbLeague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligový zápas" />
        </RadioGroup>

        <ImageView
            android:id="@+id/ivTypeIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/cbOvertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hrálo se prodloužení?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/etHomeScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Body domácí"
                android:inputType="number" />
            <EditText
                android:id="@+id/etAwayScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Body hosté"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uložit zápas" />

    </LinearLayout>
</ScrollView>